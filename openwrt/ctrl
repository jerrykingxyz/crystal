#!/bin/sh

set -e

CUR_DIR=$(dirname "$(readlink -f -- "$0")")

ACTION=$1
PKG_NAME=$2

# transform PKG_NAME to array
if [ -z "$PKG_NAME" ]; then
    PKG_NAME=$(ls $CUR_DIR/packages)
fi

if [ "$ACTION" = "setup" ]; then
    opkg update
fi

for pkg in $PKG_NAME; do
    sh $CUR_DIR/packages/$pkg/ctrl $ACTION
done
